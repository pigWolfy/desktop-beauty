{
  "name": "desktop-beauty",
  "version": "1.3.9",
  "description": "一个优雅的桌面管理工具 - Desktop Beauty",
  "main": "dist/main/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pigWolfy/desktop-beauty.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "set VITE_DEV_SERVER_URL=http://localhost:5173&& concurrently -k \"vite\" \"wait-on tcp:5173 -t 30000 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "keywords": [
    "desktop",
    "manager",
    "electron",
    "vue",
    "wallpaper"
  ],
  "author": "Desktop Beauty Team",
  "license": "MIT",
  "dependencies": {
    "@vueuse/core": "^10.7.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "pinia": "^2.1.7",
    "systeminformation": "^5.21.20",
    "uuid": "^13.0.0",
    "vue": "^3.4.0",
    "vue-i18n": "^9.14.5",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.2",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "sass": "^1.69.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^1.8.25",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.desktop-beauty.app",
    "productName": "Desktop Beauty",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "pigWolfy",
      "repo": "desktop-beauty"
    }
  }
}
